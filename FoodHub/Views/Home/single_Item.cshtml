@model FoodHub.ViewModels.ItemEntry
@{

    ViewBag.Title = "single_Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    function AddToCart(itcd) {

        $.ajax({
            type: "POST",
            url: '@Url.Action("AddToCart", "Home")',
            data: { "itemcd": itcd },
            datatype: JSON,
            success: function (data) {
                if (data == "Success") {
                }
                else {
                    alert(data);
                }
            },
            error: function (error) {
                console.log(error);
            }
        });
    }

</script>



<div class="container" style="padding-top:40px;">
    <div class="row">
        <div class="col-md-6 package-leftpart">
            <img src=@Model.ITEM.IMG alt="">
        </div>
        <div class="col-md-6">
