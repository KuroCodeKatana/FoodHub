                        <h2 class="price-bold">₹ @Model.ITEM.PRICE </h2>
                    </div>
                    <div class="col-md-5 col-sm-5">
                        <a onclick="AddToCart(@Model.ITEM.ITEM_CD)" style="cursor:pointer;" class="btn btn-common"><i class="icon-cart"></i> Buy Now</a>     @*ekta notification lagbe*@   
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

