@model FoodHub.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section AddToHead{
    <link href="~/Content/login/style.css" rel="stylesheet" type="text/css" />
}
<div class="signup-form">
    <div class="container">
        <div class="navigation">
            <ol>
                <li><a href="#" data-ref="name">Name</a></li>
                <li><a href="#" data-ref="uname">Username</a></li>
                <li><a href="#" data-ref="email">Email</a></li>
                <li><a href="#" data-ref="viewpswd">Password</a></li>
                <li><a href="#" data-ref="datepicker">DOB</a></li>
                <li><a href="#" data-ref="phone">Phone</a></li>
                <li><a href="#" data-ref="phone">Address</a></li>
                <li><a href="#" data-ref="phone">City</a></li>
                <li><a href="#" data-ref="phone">Pin</a></li>
                <li><a href="#" data-ref="phone">State</a></li>
                <li><a href="#" data-ref="phone">User_Type</a></li>
                <li><a href="#" data-ref="phone">Gender</a></li>
            </ol>
        </div>
        <form id="sign-form" class="sign-form">
            <ol class="questions">
                <li>
                    <span><label for="name">USER_NAME</label></span>
                    @Html.TextBoxFor(m => m.USER_DETAILS.USER_NAME, new { id = "USER_NAME", @class = "active", @placeholder = "Username" })
                </li>

                <li>
                    <span><label for="email">Enter Email</label></span>
                    @Html.TextBoxFor(m => m.USER_DETAILS.EMAIL, new { id = "EMAIL", @placeholder = "Email", @autofocus = "true" })
                </li>
                <li>
                    <span><label for="password">PASSWORD</label></span>
                    @*<input id="viewpswd" name="password" type="text" />*@
                    @Html.PasswordFor(m => m.USER_DETAILS.PASSWORD, new { id = "viewpswd",name= "password" })
                    <span id="show-pwd" class="view"></span>
                </li>
                <li>
                    <span><label for="DOB">DOB</label></span>
                    @*<input type="text" name="startDate" value="" id="datepicker" class="" data-dateformat="dd/mm/yy" placeholder="Date">*@
                    @Html.TextBoxFor(m => m.USER_DETAILS.DOB, new { id = "datepicker", @dateformat = "dd/mm/yy" })
                </li>
                <li>
                    <span><label for="phone">Contact_no</label></span>
                    <select name="countryCode" class="country">
                        <option data-countryCode="GB" value="91">(+91) INDIA </option>
                        <option data-countryCode="GB" value="44">(+44) UK </option>
                        <option data-countryCode="US" value="1">(+1) USA </option>
                        <optgroup label="Other countries">
                            <option data-countryCode="DZ" value="213"> (+213)Algeria</option>
                            <option data-countryCode="AD" value="376"> (+376) Andorra</option>
                            <option data-countryCode="AO" value="244">(+244) Angola </option>
                            <option data-countryCode="AI" value="1264"> (+1264) Anguilla</option>
                            <option data-countryCode="AG" value="1268">(+1268) Antigua &amp; Barbuda </option>
                            <option data-countryCode="AR" value="54">(+dbstate54) Argentina </option>
                            <option data-countryCode="AM" value="374"> (+374) Armenia</option>
                            <option data-countryCode="AW" value="297">(+297) Aruba </option>
                            <option data-countryCode="AU" value="61"> (+61) Australia</option>
                            <option data-countryCode="AT" value="43">(+43) Austria </option>
                            <option data-countryCode="AZ" value="994"> (+994) Azerbaijan</option>
                            <option data-countryCode="BS" value="1242">(+1242)Bahamas </option>
                        </optgroup>
                    </select>
                    <input id="phone" name="phone" type="text" autofocus />
                </li>
                <li>
                    <span><label for="address">Address</label></span>
                    @Html.TextBoxFor(m => m.USER_DETAILS.ADDRESS, new { id = "ADDRESS", @placeholder = "Address" })
                </li>
                <li>
                    <span><label for="city">City</label></span>
                    <select id="dbcity" class="form-control">
                        <option value="-1">Select City</option>
                        <option value="Krishnanagar">Krishnanagar</option>
                        <option value="DumDum">DumDum</option>
                        <option value="Howrah">Howrah</option>
                    </select>
                </li>
                <li>
                    <span><label for="pin">Pin</label></span>
                    @Html.TextBoxFor(m => m.USER_DETAILS.PIN, new { id = "PIN", @placeholder="Pin" })
                </li>
                <li>
                    <span><label for="state">Select State</label></span>
                    <select id="dbstate" class="form-control">
                        <option value="-1">Select State</option>
                    </select>

                </li>
                <li>
                    <span><label for="user_type">User_type</label></span>

                    @Html.TextBoxFor(m => m.USER_DETAILS.USER_TYPE, new { id = "USER_TYPE", @placeholder = "User_Type" })
                </li>
                <li>
                    <span><label for="gender">Gender</label></span>

                    @Html.TextBoxFor(m => m.USER_DETAILS.GENDER, new { id = "GENDER", @placeholder = "Gender" })
                </li>
                <li>
                    <p style="margin-top: 45px;font-size: 32pt;float:right">
                        <a href="#" style="color:white;text-decoration:none" id="signup">sign up</a>
                    </p>
                </li>


            </ol>

